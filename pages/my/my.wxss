page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.top-view {
  width: 100%;
  height: 634rpx;
  position: relative;
  bottom: 2rpx;
}

.has-login.top-view {
  height: 100%;
}

.top-bg-img {
  width: 100%;
  height: 100%;
}

.nav-bar {
  position: absolute;
  display: flex;
  flex-direction: row;
  height: 88rpx;
  align-items: center;
}

.nav-bar-setting {
  width: 56rpx;
  height: 56rpx;
  margin-left: 40rpx
}

.nav-bar-edit {
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx;
}

.login-view {
  position: absolute;
  left: 0;
  top: 0;
  margin-top: 268rpx;
  width: 100%;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: 30rpx;
}

.has-login .login-view {
  margin-top: 0;
}

.login {
  display: flex;
  flex-direction: column;
}

.login .role-tag-container {
  display: flex;
  margin-top: 8rpx;
  gap: 8rpx;
  flex-wrap: wrap;
}

.login .role-tag {
  width: 76rpx;
  height: 30rpx;
}

.login-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}

.swiper {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

.not-login {
  width: 100%;
  position: absolute;
  top: 0;
  margin-top: 216rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.unlogin-view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
}

.unlogin-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 500;
  color: #1A171B;
  line-height: 64rpx;
  font-family: PingFangSC-Medium;
}

.unlogin-avatar {
  width: 144rpx;
  height: 144rpx;
}

.unlogin-btn {
  width: 668rpx;
  height: 86rpx;
  background: transparent;
  border-radius: 44rpx;
  border: 1rpx solid rgba(26, 23, 27, 0.32);
  transform: rotateZ(360deg);
  font-size: 32rpx;
  font-weight: 400;
  color: #1A171B;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.unlogin-btn::after {
  border: none;
}

.signin-btn {
  width: 150rpx;
  height: 80rpx;
  background: transparent;
  border-radius: 44rpx;
  border: 1rpx solid rgba(26, 23, 27, 0.32);
  transform: rotateZ(360deg);
  font-size: 32rpx;
  font-weight: 400;
  color: #1A171B;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.login-text {
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #1A171B;
  font-weight: 500;
  line-height: 64rpx;
}

.login-id {
  margin-top: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(26, 23, 27, 0.5);
  font-weight: 400;
}

.content-view {
  box-sizing: border-box;
  padding: 0 32rpx;
}

.content-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0 56rpx 0;
  border-bottom: 1rpx solid rgba(26, 23, 27, 0.12);
}

.content-item ~ .content-item {
  margin-top: 16rpx;
}

.content-item .arrow {
  width: 32rpx;
  height: 32rpx;
}

.name-box {
  display: flex;
  align-items: center;

}

.name-box .icon-name {
  width: 56rpx;
  height: 56rpx;
}

.name-box .name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #1A171B;
  line-height: 56rpx;
  margin-left: 40rpx;
}


.tab-bar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top: 1rpx solid #f7f7f7;
  background-color: white;
}

.nav-bar-text {
  color: #666666;
  font-size: 28rpx;
  font-weight: 400;
  width: 90rpx;
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.nav-bar-text-selected {
  color: #333333;
  font-size: 34rpx;
  font-weight: 600;
  width: 90rpx;
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.line-style {
  background: transparent;
  height: 5rpx;
  width: 30rpx;
  margin-bottom: 2rpx;
  margin-top: 20rpx;
}

.line-style-selected {
  background: #333333;
  height: 5rpx;
  width: 30rpx;
  margin-bottom: 2rpx;
  margin-top: 20rpx;
  border-radius: 100rpx;

}

.tabs-scroll-view {
  width: 100%;
  height: 100%;
}

.tab-like,
.tab-evaluate,
.tab-favorite {
  width: 100%;
  display: flex;
  flex-direction: column;
}


.favorite-list-item-container {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  position: relative;
}

.favorite-item-image {
  width: 690rpx;
  height: 360rpx;
  border-radius: 8rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  background-color: white;
}

.favorite-item-address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.favorite-container {
  position: absolute;
  bottom: 0;
  left: 32rpx;
  background-color: rgba(26, 23, 27, 0.3);
  width: 690rpx;
  box-sizing: border-box;
  padding: 14rpx 24rpx 18rpx 24rpx;
  display: flex;
  flex-direction: column;
  backdrop-filter: blur(40rpx);
}

.favorite-item-title {
  width: 600rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.favorite-item-desc {
  display: flex;
  width: max-content;
  flex-direction: row;
  margin-top: 3rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.favorite-item-desc-image {
  width: 25rpx;
  height: 25rpx;
  min-width: 25rpx;
}

.favorite-item-desc-distance {
  font-size: 20rpx;
  color: #FFFFFF;
  height: 25rpx;
  line-height: 25rpx;
  font-weight: 400;
  margin-left: 5rpx;
  max-width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.favorite-item-desc-text {
  font-size: 18rpx;
  color: #FFFFFF;
  line-height: 25rpx;
  font-weight: 400;
  margin-left: 5rpx;
}

.bottom-msg {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
}

.favorite-bottom-msg {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}


.events {
  position: absolute;
  top: 0;
  box-sizing: border-box;
  margin-top: 456rpx;
  padding: 0rpx 40rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.event-info {
  display: flex;
  align-items: center;
  padding-left: 57rpx;
  height: 120rpx;
  flex: 1;
  margin-top: 40rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
}

.icon-event {
  width: 64rpx;
  height: 64rpx;
}

.event-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1A171B;
  margin-left: 42rpx;
}

.ic-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 350rpx;
}

.event,
.assist {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.activities {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  font-weight: 400;
}

.eventNum {
  margin-left: 40rpx;
  font-size: 34rpx;
  color: #333333;
  text-align: center;
  font-weight: 400;
  align-items: center;
}

.greatNum {
  margin-left: 60rpx;
  font-size: 34rpx;
  color: #333333;
  text-align: center;
  font-weight: 400;
}

.accolades {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  font-weight: 400;
}

.l-active-class {
  font-size: 28rpx !important;
  color: #1A171B !important;
  font-weight: 500;
  padding: 0rpx 40rpx !important;
}

.l-inactive-class {
  font-size: 28rpx !important;
  color: rgba(26, 23, 27, 0.5) !important;
  font-weight: 400;
  padding: 0rpx 40rpx !important;
}

.scan_code_icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 33rpx;
}

.profiles {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.profile_item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 28rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: rgba(26, 23, 27, 1);
  font-family: 'PingFangSC-Medium';
  background-color: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(255, 217, 197, 1);
}

.profile_item ~ .profile_item {
  margin-left: 28rpx;
}

.profile_item image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 39rpx;
}

.num-group {
  position: absolute;
  bottom: 58rpx;
  left: 80rpx;
  right: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.num-group .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 5rpx;
}

.num-group .item .num {
  font-size: 40rpx;
  line-height: 55rpx;
  color: #1A171B;
}

.num-group .item .txt {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #1A171B;
  font-weight: 400;
}
