/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.logo {
  width: 128rpx;
  height: 128rpx;
  display: block;
  margin: 0 auto;
  padding-top: 247rpx;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 48rpx;
  position: absolute;
  bottom: 150rpx;
}
.coverBgView {
  width: 100%;
  height: 96rpx;
  position: relative;
}

.loginBtn {
  width: 100%;
  background-color: #1A171B;
  letter-spacing: 1px;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 400;
  height: 96rpx;
  line-height: 96rpx;
  position: absolute;
  border-radius: 48rpx;
}
.coverView {
  position: absolute;
  height: 96rpx;
  width: 100%;
}

.policy {
  flex-direction: row;
  font-size: 24rpx;
  color: #1A171B;
  font-weight: 400;
  margin-top: 30rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  line-height: 33rpx;
  display: flex;
  align-items: center;
}
.img-container{
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.policy-img {
  width: 100%;
  height: 100%;
}
.policy-text {
  line-height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
}
.policy-text-normal {
  line-height: 40rpx;
  vertical-align: middle;
}